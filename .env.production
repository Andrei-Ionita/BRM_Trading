# BRM Trading Bot - Production Configuration
# Copy this file to .env and fill in your REAL credentials from BRM

# Environment: "test" or "production"
BRM_ENVIRONMENT=production

# Authentication method: "password" or "basic"
BRM_AUTH_METHOD=password

# Your REAL credentials from BRM operator
BRM_USERNAME=your_real_username_here
BRM_PASSWORD=your_real_password_here
BRM_PORTFOLIO_ID=your_real_portfolio_id_here

# OAuth scope (usually "intraday_api")
BRM_SCOPE=intraday_api

# Trading strategy: "manual", "arbitrage", "mean_reversion", "momentum"
BRM_STRATEGY=manual

# Enable automatic trading: "true" or "false"
BRM_AUTO_TRADING=false

# Risk management settings (optional)
BRM_MAX_POSITION_SIZE=1000
BRM_MAX_PRICE=10000
BRM_MIN_PRICE=-10000
BRM_RISK_LIMIT=50000

# Logging level: "DEBUG", "INFO", "WARNING", "ERROR"
LOG_LEVEL=INFO
