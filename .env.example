# BRM Trading Bot Configuration
# Copy this file to .env and fill in your actual credentials
# For Railway: Add these as environment variables in the Railway dashboard

# ==================== ENVIRONMENT ====================
BRM_ENVIRONMENT=test

# ==================== DAY-AHEAD API ====================
BRM_CLIENT_ID=your_client_id_here
BRM_CLIENT_SECRET=your_client_secret_here
BRM_PORTFOLIO_ID=ADREM - DA
BRM_DELIVERY_AREA_ID=1

# ==================== INTRADAY API ====================
INTRADAY_USERNAME=Test_IntradayAPI_ADREM
INTRADAY_PASSWORD=your_password_here
INTRADAY_PORTFOLIO_ID=E00160-1
INTRADAY_DELIVERY_AREA_ID=111

# ==================== TRADING PARAMETERS ====================
IMBALANCE_THRESHOLD_MW=0.1

# ==================== SOLCAST (Forecast) ====================
SOLCAST_API_KEY=your_solcast_api_key

# ==================== FLASK (Dashboard) ====================
FLASK_ENV=production
SECRET_KEY=your-secret-key-here

